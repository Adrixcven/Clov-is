<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clovis" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/lightgrey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkgrey</item>
        <item name="colorSecondaryVariant">@color/lightggdark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- TextInputLayout -->
        <item name="textInputStyle">@style/TextInput</item>

        <!-- Button -->
        <item name="buttonStyle">@style/boton</item>

        <!-- Spinner -->
        <item name="spinnerStyle">@style/Spinner</item>

        <!-- Switch -->
        <item name="switchStyle">@style/Switch</item>

        <!-- CheckBox -->
        <item name="checkboxStyle">@style/CheckBox</item>

        <!-- TextViews -->
        <item name="android:textViewStyle">@style/TextView_colorOnly</item>
    </style>
</resources>